#static
gcc -I$HOME/install/include/ -I/usr/lib/openmpi/include/ -c cuia.c
ar crs libcuia.a cuia.o
ranlib libcuia.a

#shared
gcc -fPIC -I$HOME/install/include/ -I/usr/lib/openmpi/include/ -c cuia.c
gcc -L$HOME/install/lib -shared -Wl,-soname,libcuia.so.1 \
  -o libcuia.so.1.0.1 cuia.o -lrastro

#example
gcc -L. -L$HOME/install/lib -I/usr/lib/openmpi/include/ prog.c \
  -lcuia -lrastro -lmpi
mpirun ./a.out
